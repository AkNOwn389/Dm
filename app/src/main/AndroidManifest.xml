        <activity
            android:name=".activities.ChatPageSearchUserActivity"
            android:exported="false" />
        <activity
            android:name=".activities.PostViewActivity"
            android:exported="false" />
        <activity
            android:name=".activities.NotificationActivity"
            android:exported="false" />
        <activity
            android:name=".activities.UserViewActivity"
            android:exported="false" />
        <activity
            android:name=".activities.MainFragmentContainerActivity"
