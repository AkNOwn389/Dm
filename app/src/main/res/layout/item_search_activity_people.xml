<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView14"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:elevation="5dp"
                app:cardCornerRadius="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/searchItemPeopleImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/searchPeopleName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="username"
                android:textColor="@color/blackOnDay"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@+id/cardView14"
                app:layout_constraintTop_toTopOf="@+id/cardView14" />

            <TextView
                android:id="@+id/searchPeopleItemLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="user location"
                android:textColor="@color/blackOnDay"
                app:layout_constraintEnd_toStartOf="@+id/searchItemPeopleArrowBtn"
                app:layout_constraintStart_toStartOf="@+id/searchPeopleName"
                app:layout_constraintTop_toBottomOf="@+id/searchPeopleName" />

            <ImageButton
                android:id="@+id/searchItemPeopleArrowBtn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@drawable/chat_item_ripple"
                android:src="@drawable/arrow_forward_ios"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/blackOnDay" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>